<UserControl x:Class="BscanILL.UI.Controls.ScannerControls.ClickMiniControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
 	xmlns:clickControls="clr-namespace:BscanILL.UI.Controls.ScannerControls.ClickMini"
    mc:Ignorable="d" 
    Height="280" d:DesignWidth="200">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="1.3*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<clickControls:ScanModeControl x:Name="scanModeControl" Grid.Row="0" Width="Auto" Height="Auto" />
		<clickControls:ColorModeControl x:Name="colorModeControl" Grid.Row="1" Width="Auto" Height="Auto" />
		<clickControls:FileFormatControl x:Name="fileFormatControl" Grid.Row="2" Width="Auto" Height="Auto" />
		<clickControls:DpiRollingControl x:Name="dpiControl" Grid.Row="3" Width="Auto" Height="Auto" />
		<clickControls:BrightnessContrastControl x:Name="brightContrControl" Grid.Row="4" Width="Auto" Height="Auto" />
		<!--<TextBlock Grid.Row="5" Margin="4" HorizontalAlignment="Right" PreviewMouseDown="MoreSettings_Click">
			<Hyperlink Foreground="Blue">More Settings...</Hyperlink>
		</TextBlock>-->
	</Grid>
</UserControl>
