<Window x:Class="BscanILL.UI.Settings.AddIllUsbDriveDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add ILL USB Drive" Height="150" Width="450" WindowStyle="ToolWindow" ResizeMode="NoResize" 
	WindowStartupLocation="CenterScreen">
    
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="32"/>
		</Grid.RowDefinitions>
		<Grid>
			<TextBlock Text="USB Drive Name:" Margin="16,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
			<TextBox x:Name="textBoxName" Height="23" FontSize="16" Margin="108,16,16,0" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" />
			<TextBlock Text="(At Least 5 characters)" Margin="108,44,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
		</Grid>
		<Grid Grid.Row="1">
			<Button HorizontalAlignment="Right" VerticalAlignment="Center" Content="Cancel" Width="75" Margin="0,0,16,0" IsCancel="True" Click="Cancel_Click" />
			<Button x:Name="buttonOk" HorizontalAlignment="Right" VerticalAlignment="Center" Content="OK" Width="75" Margin="0,0,99,0" Click="Ok_Click" IsDefault="True" IsEnabled="False" />
		</Grid>
	</Grid>
	
</Window>
