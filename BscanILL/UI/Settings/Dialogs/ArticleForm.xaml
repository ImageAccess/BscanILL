<Window x:Class="BscanILL.UI.Settings.Dialogs.ArticleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Article" Height="638" Width="910" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid Margin="8,8,4,8">
			<ListView x:Name="listView" VerticalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Visible" >
				<ListView.View>
					<GridView>
						<GridViewColumn Header="Column Name" Width="150" DisplayMemberBinding="ColumnName" ></GridViewColumn>
						<GridViewColumn Header="Column Value" Width="250" DisplayMemberBinding="ColumnValue" ></GridViewColumn>
					</GridView>
				</ListView.View>
			</ListView>
		</Grid>
		<Grid Grid.Column="1" Margin="4,8,8,8">
			<ListView x:Name="listView2" VerticalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Visible" >
				<ListView.View>
					<GridView>
						<GridViewColumn Header="Column Name" Width="150" DisplayMemberBinding="ColumnName" ></GridViewColumn>
						<GridViewColumn Header="Column Value" Width="250" DisplayMemberBinding="ColumnValue" ></GridViewColumn>
					</GridView>
				</ListView.View>
			</ListView>
		</Grid>
	</Grid>
</Window>
