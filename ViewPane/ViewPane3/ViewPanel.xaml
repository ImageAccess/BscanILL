<UserControl x:Class="ViewPane.ViewPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:ViewPane"
	xmlns:imagePanel="clr-namespace:ViewPane.ImagePanel"
	xmlns:thumbnails="clr-namespace:ViewPane.Thumbnails"
	x:ClassModifier="public"
    Height="Auto" Width="Auto" SnapsToDevicePixels="True">
    
	<DockPanel x:Name="dockPanel" AllowDrop="True" DragOver="Drag_Over" Drop="Drag_Drop">
		<thumbnails:StripPane x:Name="stripPane" DockPanel.Dock="Bottom" Width="Auto" />
		<imagePanel:ImagePane x:Name="imagePane" Height="Auto" Width="Auto" />
	</DockPanel>
	
</UserControl>
